<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Texts-->

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/H2</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.H1">
        <item name="android:textSize">@dimen/H1</item>
    </style>

    <style name="Text.H3">
        <item name="android:textSize">@dimen/H3</item>
    </style>

    <!--Buttons-->

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="shapeAppearance">@style/PrimaryButtonShape</item>
        <item name="backgroundTint">#40f4d3</item>
        <item name="android:textAppearance">@style/Text.H3</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">6dp</item>
    </style>

    <style name="PrimaryButtonShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/button_radius</item>
    </style>

    <!--BottomSheetDialog-->

    <style name="BottomSheetDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

</resources>
